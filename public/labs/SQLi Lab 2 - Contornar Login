<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0d1117; color: #e0f2f7; }
        .login-card { background-color: #161b22; border-color: #00bfff; }
        .login-input { background-color: #0d1117; border-color: rgba(0, 191, 255, 0.3); }
        .login-btn { background-color: #00bfff; }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">
    <div id="login-container" class="login-card w-full max-w-sm p-8 border-2 rounded-lg shadow-lg shadow-cyan-500/20">
        <h1 class="text-3xl font-bold text-cyan-400 mb-6 text-center">Área Restrita</h1>
        <div class="space-y-4">
            <input type="text" id="username" placeholder="Utilizador" class="login-input w-full p-3 rounded-md">
            <input type="password" id="password" placeholder="Palavra-passe" class="login-input w-full p-3 rounded-md">
            <button id="loginBtn" class="login-btn w-full p-3 text-white font-bold rounded-md">Entrar</button>
        </div>
        <p id="message" class="mt-4 text-center text-red-400"></p>
    </div>
    <div id="success-message" class="hidden text-center">
        <h1 class="text-4xl font-bold text-green-400">Acesso Concedido!</h1>
        <p class="text-xl mt-2">Bem-vindo, <span class="font-bold">administrador</span>.</p>
    </div>
    <script>
        const users = [
            { username: 'administrator', password: 'supersecretpasswordnobodyknows' }
        ];

        function attemptLogin(user, pass) {
            // VULNERABILIDADE: A query é construída concatenando as entradas.
            const query = `users.find(u => u.username === '${user}' && u.password === '${pass}')`;
            try {
                return eval(query);
            } catch (e) { return null; }
        }

        document.getElementById('loginBtn').addEventListener('click', () => {
            const user = document.getElementById('username').value;
            const pass = document.getElementById('password').value;
            const messageEl = document.getElementById('message');
            
            const loggedInUser = attemptLogin(user, pass);

            if (loggedInUser && loggedInUser.username === 'administrator') {
                document.getElementById('login-container').classList.add('hidden');
                document.getElementById('success-message').classList.remove('hidden');
            } else {
                messageEl.textContent = 'Utilizador ou palavra-passe inválidos.';
            }
        });
    </script>
</body>
</html>
